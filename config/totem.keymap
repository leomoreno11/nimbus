            // ┃           ┃     Z     ┃     X     ┃     C     ┃     V     ┃     B     ┃   ┃     K     ┃     M     ┃     ,     ┃     .     ┃     /     ┃           ┃
            // ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛
            //                                     ┃           ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃   BSPC    ┃           ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
                &kp Q           &kp W           &kp E        &kp R        &kp T        &kp Y      &kp U         &kp I               &kp O           &kp P
                &mt LEFT_GUI A  &mt S LEFT_ALT  &mt LCTRL D  &mt LSHFT F  &kp G        &kp H      &mt LSHIFT J  &mt LEFT_CONTROL K  &mt LEFT_ALT L  &mt LGUI SEMICOLON
&kp LEFT_SHIFT  &kp Z           &kp X           &kp C        &kp V        &kp B        &kp N      &kp M         &kp COMMA           &kp PERIOD      &kp FSLH            &kp APOSTROPHE
                                                &lt 3 DEL    &lt 2 TAB    &kp SPACE    &kp ENTER  &lt 1 TAB     &kp BACKSPACE
            >;
